{% extends "/layout/admindefault.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="admin-edit">
    <h2>Update an order</h2>
    <article class="onePost">
    <h4>Commande n°{{ order.id }}</h4>
    <p>Client n°{{ order.idUser }}</p>
    <ul>
    {% for product in products %}
        <li>{{ product.name }} - {{ product.qty }} x {{ product.price | number_format(2, ',', '.') }}€</li>
    {% endfor %}
    </ul>
    <h4>Total de {{ order.priceTTC | number_format(2, ',', '.')}}€</h4>
    <p><a href="{{ order.deleteURL }}">SUPPRIMER</a></p>
    </article>
</section>
{% endblock %}