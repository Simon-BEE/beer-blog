{% extends "/layout/admindefault.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="admin-index">
    
    <article class="onePost">
    <h2>Latest article</h2>
    <h3>{{ post.name }}</h3>
    <p>{{ post.getExcerpt(200) }}</p>
    <p><a href="{{ post.AdminUrl }}">edit</a></p>
    </article>

    <article class="onePost">
    <h2>Latest beer</h2>
    <h3>{{ beer.name }}</h3>
    <p>{{ beer.content | slice(0, 100) }}</p>
    <p><a href="{{ beer.AdminUrl }}">edit</a></p>
    </article>

    <article class="onePost">
    <h2>Latest category</h2>
    <h3>{{ category.name }}</h3>
    <p><a href="{{ category.AdminUrl }}">edit</a></p>
    </article>

    <article class="onePost">
    <h2>Latest user</h2>
    <h3>{{ user.mail }}</h3>
    <p>{{ user.firstname }} {{ user.lastname }}</p>
    <p><a href="{{ user.AdminUrl }}">edit</a></p>
    </article>

    <article class="onePost">
    <h2>Latest order</h2>
    <h3>Commande n°{{ order.id }}</h3>
    <p>Client n°{{ order.idUser }} - {{ order.priceTTC }}€</p>
    <p><a href="{{ order.AdminUrl }}">show</a></p>
    </article>
    
</section>
{% endblock %}