{% extends "/layout/default.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

<section class="confirm">
	<h2>Commande n°{{ order.id }}</h2>
	<div class="table-confirm">
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix TTC</th>
                    <th>Nombre</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ (product.price * 1.2) | number_format(2, ',', '.') }}€</td>
                    <td>{{ product.qty }}</td>
                    <td>{{ ((product.price * 1.2) * product.qty) | number_format(2, ',', '.') }}€</td>
                </tr>
            {% endfor %}
                
                
            </tbody>
            <tfoot>
                    {% if order.priceTTC < 30 %}
                <tr>
                    <th>Frais de port</th>
                    <th colspan="3">5,40€*</th>
                </tr>
                <tr>
                    <th>Total</th>
                    <th colspan="3">{{ (order.priceTTC + 5.40) | number_format(2, ',', '.') }}€</th>
                </tr>
                    {% else %}
                <tr>
                    <th>Total</th>
                    <th colspan="3">{{ order.priceTTC | number_format(2, ',', '.')}}€</th>
                </tr>
                    {% endif %}
            </tfoot>
        </table>
        
    </div>
    <p>Votre commande sera livré à {{ user.city }} en {{ user.country }} au {{ user.address }}.**</p>
    {% if order.priceTTC < 30 %}
            <p class="small">*Votre commande est inférieur à 30€, des frais de port de 5,40€ s'ajoute à votre commande.</p>
    {% endif %}
    <p class="small">**(temps de livraison estimé 5jours)</p>
</section>

{% endblock %}